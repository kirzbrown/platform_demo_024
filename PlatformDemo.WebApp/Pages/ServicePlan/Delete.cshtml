@page "{id:int}"
@model DeleteModel

<h2>Delete Service Plan</h2>

<h3>Are you sure you want to delete this Service Plan?</h3>
<div>
    <h4>Service Plan</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Date of Purchase
        </dt>
        <dd class="col-sm-10">
            @Model.ServicePlan.DateOfPurchase
        </dd>
    </dl>
</div>

<form method="post">
    <input type="hidden" asp-for="ServicePlan.Id" />

    <div class="mt-4">
        <a asp-page="./Index" class="btn btn-secondary">Back</a>
        <button type="submit" class="btn btn-danger">Delete</button>
    </div>
</form>

